# PLUMED FILE
#
# UNITS ENERGY=kcal/mol LENGTH=A
#
d1: DISTANCE ATOMS=1,4
d2: DISTANCE ATOMS=1,2
d3: DISTANCE ATOMS=2,3
d4: DISTANCE ATOMS=3,4

# Define species to construct contact matrix
# n=6, m=12, R0=0.265(nm) [C-C], and R0=0.222(nm) [C-H]
DENSITY SPECIES=1-4 LABEL=carbon

contact_mat: CONTACT_MATRIX ATOMS=carbon SWITCH={RATIONAL D_0=0.0 R_0=0.265 NN=6 MM=12}
# SPRINT coordinate
ss: SPRINT MATRIX=contact_mat

# PBMetaD
PBMETAD ARG=ss.coord-0,ss.coord-1,ss.coord-2,ss.coord-3 SIGMA=0.1,0.1,0.1,0.1 HEIGHT=4.0 PACE=500 FILE=HILLS_0,HILLS_1,HILLS_2,HILLS_3 LABEL=pb

# Flush data at every stride
FLUSH STRIDE=20
PRINT ARG=ss.*,pb.* STRIDE=3 FILE=SPRINT
PRINT ARG=d1,d2,d3,d4 STRIDE=10 FILE=COLVAR
